<view class="post-container">
  <view class="title">
    {{post.title}}
  </view>
  <view class="vote-container">
    <up-arrow post="{{post}}"></up-arrow>
    <view class="num-votes">{{post.votes}}</view>
    <down-arrow post="{{post}}"></down-arrow>
  </view>
  <view class="body-container">
    <view class="body-text">
    {{post.body}}
    </view>
  </view>
  <view class="clr"></view>
</view>

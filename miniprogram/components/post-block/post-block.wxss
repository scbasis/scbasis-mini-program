.post-container {
  background: white;
  border-radius: 5px;
  padding: 0.5em;
  position: relative;
  height: 100%;
  box-sizing: border-box;
}

.title {
  position: absolute;
  top: -0.6em;
  padding: 0.2em;
  padding-left: 0.8em;
  background: #47624a;
  width: 50%;
  color: snow; 
}

.vote-container {
  padding-top: 1.4em;
  float: left;
  width: 10%;
}

.upvote-button, .downvote-button, .num-votes {
  width: 100%;
  /* border: 1px solid black; */
  color:#e8a5a6
}

.num-votes {
  text-align: center;
  color:#47624a;
}

.upvote-button, .downvote-button {
  display: block;
  width: 100% !important;
  min-height: 0;
  font-size: 13px;
  padding: 0 !important;
  margin: auto;
  margin-bottom: -5px;
  line-height: 1em !important;
}

.upvote, .downvote {
  width: 1em;
  height: 1em;
}

.body-text {
  padding-top: 1.4em;
  float: right;
  width: 80%;
  font-size: 13px;
  font-family: inherit;
  color:black;
}
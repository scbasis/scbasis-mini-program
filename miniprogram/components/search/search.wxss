/* components/search-bar.wxss */
.search-bar {
  position: fixed;
  font-size: 80%;
  line-height: 80%; 
  height: 40px;
  width: 100%;
  border-bottom: 3px lightgray solid;
  background-color: snow;
}

.flex-wrp {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.flex-item {
  padding: 0.2em;
}

.search-container {
  flex-basis: 70%;
  height: 100%;
  border: 2px solid grey;
  border-radius: 3px;
}

.search-container input{
  float:left;
  width: 80%;
  margin-top: 4px;
  margin-left: 5%;
  /* background: red; */
  
}

.search-container button{
  /* background: blue; */
  float: right;
  width: 10%;
  min-height: 0;
  height: 30px;
  border: 2px solid grey;
  border-radius: 3px;
  padding: 0;
  margin: 0;
  line-height: 1em;
}

.icon {
  /* background: green; */
  margin: auto;
}

.nav-button, .spacer-1 {
  flex-basis: 10%;
  min-height: 0;
  height: 20px;
  padding: 0;
  margin: 0 !important;
  line-height: 1em;
}

.nav-button{
   width: 30px;
  height: 20px;
  margin-top: 0.5em;
}
.nav-image {
  width: 25px;
  height: 20px;
  padding-right:0.2em;
  margin-top: 0.5em;
}
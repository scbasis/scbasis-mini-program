/* components/search-bar.wxss */
ul{
  display: flex;
  list-style: none;
  flex-wrap:wrap;
  align-items:center;
  justify-content:center;
}


.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color:#000000;
}


.search-container{
  margin-top: 5px;
  display:flex;
}
.search-container input{
  border-radius: 3px 0 0 3px;
  background-color: #c7d0d8;
  width: 150px;
  padding:5px;
}

.search-container button{
  width: 23px;
  background-color: #b7b7b8;
  border-radius: 0 3px 3px 0;
  padding:0;
  min-height: 0;
  margin:0;
}

.iconButton{
  margin-top:2px;
}
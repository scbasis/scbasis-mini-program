
.container {
  margin-top: 3.5em;
  padding: 0 1em;
}

.section-1 {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  margin: 0.5em 0;
  padding: 1em;
  border-radius: 1em;
  background-color: white;
}

.userinfo-avatar {
  width: 80px;
  height: 80px;
}

.personal-info-container {
  flex: 1 1 60%;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin: 0.7em;
}

.personal-info {
  display: inline-block;
  flex: 1 1 40%; 
  /* flex doesn't work - width of elements don't change */
  margin: 0.2em;
  padding: 0.2em 1em;
  border-radius: 0.25em;
  background-color: rgb(201, 208,	215);	
  vertical-align: middle;
}

.personal-info-name {
  flex: 2 1 60%;
  padding: 0.2em 2em;
}


.info-container {
  display: flex;
  align-items: center;
  background-color: white; 
  margin: 0.5em 0;
  padding: 0.2em;
  border-radius: 0.4em;
}

.label {
  display: inline-block;
  width: fit-content;
  flex-shrink: 0;
  flex-grow: 0;
  font-size: 80%;
  color: gray;
  margin: 0.3em 0.3em;
}

.info {
  display: inline-block;
  flex: 1 1 100%;
  margin: 0.3em 0.3em;
}

.form {
  flex: 1 1 100%;
  margin: 0.3em 0.3em;
}

.whats-up-flex {
  display: flex;
  flex-wrap: nowrap;
  justify-content: stretch;
  align-items: center;
}

.input-container {
  display: inline-block;
  flex: 1 1 100px;
}

.input {
  
  vertical-align: middle;
  min-width: 12em; 
  /* width: 80%; */
  
}

.submit-container {
  display: inline-block; 
  width: fit-content;
  flex: 0 0;
}

.submit-button {
  
  vertical-align: middle;
  font-size: 0.8rem !important;
  line-height: 1.3em !important;
  padding: 0.2em !important;
  
}

.row2-container {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.total-posts-container, .total-comments-container {
  box-sizing: border-box;
  width: calc(50% - 0.5em);
}

.message-button {
  width: 4em;
  font-size: 1.2em;
  padding: 0.3em 0.1em;
  padding-top: 0.5em;
  padding-bottom: 0.1em;
  border-radius: 0.5em;
  margin-top: 5px;
  margin-left: 8px;
  background: #47625a;
  color:#fff;
  border-width:thick;
  border-color:#47625a;
  font-family:'Lucida Sans';
  font-size:15px;
  word-spacing: 1px;
  text-align:center;
}

.message-button:active {
  background: #fff;
  color:#47625a;
  border-width:4rpx;
  border-color:#47625a;
  text-align:center;
}

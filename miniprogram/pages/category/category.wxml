<!--miniprogram/pages/category/category.wxml-->

<!--headerbar-->
<view class="container">
  <header-bar>
    <button class="backButton" size="mini">
      <p class="buttonText">
        Back
      </p>
    </button>
  </header-bar>
</view>

<!--add function of finding the hottest 3 discussions in the category and adding a link-->

<!--Category Names that are decided by the people who write the new posts. Need to add a link to a js function that turns the wxss "display" of tableContainer- + "id" into show-->

<view class="catHeadrContainer">
  <view class="layoutHorizontal">
    <view bindtap="showDiscussion(1)">
      <label class="catTitle">
        Category Name 1
      </label>
    </view>
    <button class="btnNew" size="mini">
      New
    </button>
  </view>
</view>

<view class="post-container">
  <view class="title-table">
    <view class="table-tr">
      <view class="table-td">
        <div class="post-details-column-wrap">
          <div>Title of post</div>
          <div>Author 15d 70comments</div>
        </div>
      </view>

      <view class="table-td">
        image
      </view>

      <view class="table-td">
        <div class="votes">
          <div>↑</div>
          <div>10</div>
          <div>↓</div>
        </div>
      </view>
    </view>
  </view>
</view>
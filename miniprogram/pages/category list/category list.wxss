/* miniprogram/pages/category/category.wxss */

.flex-container{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:space-between;
  align-items:center;
}

.backButton {
  margin: 0.3em 0.7em;
  padding: 0.3em 0.7em;
  background: #47625a;
  color: #fff;
  border-width: thin;
  border-radius: 0.3em;
  padding-left: 5px !important;
}

.backButton:active {
  margin-top: 5px;
  background: #fff;
  color: #47625a;
  border-width: thin;
  border-color: #47625a;
}

.buttonText {
  margin-left: 5px;
}

.new-post-nav {
  vertical-align: middle;
  width: 1.9em;
  margin-right:10px;
  padding-top: 0.5em;
}

.plus-image{
  width: 1.9em;
}

.catHeadrContainer {
  background: #47625a;
  border-radius: 0 5px 5px 0;
  padding: 0.5em;
  height: 100%;
  box-sizing: border-box;
  margin-top: 17%;
  margin-right: 50px;
  margin-bottom: 10px;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
  letter-spacing:4px;
  align-items:center;
  flex-wrap:wrap;
  justify-content: space-between;
}

.catTitle {
  margin-left:10px;
  flex: 1;
  color: white;
  text-transform:uppercase; 
  font-size:15px;
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.plus-image-category{
  width: 1.6em;
  margin-right:0px;
}


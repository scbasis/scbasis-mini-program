.backButton {
  width: 4em;
  font-size: 1.1em;
  padding: 0.3em 0.1em;
  border-radius: 0.2em;
  margin-top: 5px;
  margin-left: 8px;
  background: #47625a;
  color:#fff;
  border-width:thin;
  padding-left: 5px !important;
}

.backButton:active {
  margin-top: 5px;
  background: #fff;
  color:#47625a;
  border-width:thin;
  border-color:#47625a;
}

.buttonText {
  margin-left:8px;
}

.main-container {
  margin: 1em;
  margin-top: 55px;
}

.post-container {
  background: white;
  margin-top: 10%;
  border-radius: 5px;
  position: relative;
  height: 100%;
  box-sizing: border-box;
}

.title {
  padding: 15px;
  border-radius:1%;
  box-sizing: border-box;
  background: #47625a;
  width: 100%;
  color: white; 
  font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
}

.title-textarea {
  padding: 0.3em 0.6em;
  vertical-align: middle;
  width: 100%;
  height: 5em;
  box-sizing: border-box;
  font-size:15px;
  text-transform: uppercase;
  font-family:, 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  letter-spacing: 2px;
}

.title-placeholder {
  color: white;
  font-size:17px;
}

.picker-container {
  padding: 0.5em 0.8em 0.4em 0.3em;
  margin-top:15px;
  margin-left:15px;
}

.choose-cat-uppercase{
  text-transform: uppercase;
  font-family:'Lucida Sans';
  letter-spacing: 1px;
}

.category-color-grey{
  color:grey;
}

.body-container{
  margin: 20px;
}

.body-textarea{
  padding-top: 1.4em;
  padding-left: 0.5em;
  padding-right:0.5em;
  width: 100%;
  box-sizing: border-box;
  height: 25em;
  font-size: 13px;
  font-family: inherit;
  color:black;
}

.media-scroll {
  width: 200%;
  height: 10em;
}

.scroll-item {
  width: 10em;
  height: 100%;
  display: inline-block;
}

.black-image-turns-grey{
  opacity: 0.25;
}

#red {
  background: red;
}
#green {
  background: green;
}
#yellow {
  background: yellow;
}
#blue {
  background: blue;
}

.footer{
  position:sticky;
  bottom:0;
}

.footer-left {
  float: left;
  margin:15px;
}

.footer-right {
  float: right;
  padding-top:2px;
  margin-top:19px;
  margin-bottom:15px;
  margin-right:10px;
}

.camera-button, .picture-button, .emoji-button {
  width: 1.5em;
  padding: 0.2em 0.5em !important;
}

.camera-button image, .picture-button image, .emoji-button image {
  width: 1.5em;
  vertical-align: middle;
}

.submit-button {
  border: green 2px solid;
  border-radius: 0.5em;
}
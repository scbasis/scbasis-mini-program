<!--miniprogram/pages/home/home.wxml-->
<view class="container">
  <header-bar>
    <!--profilepic-->
    <ul>
      <li>
        <view class="userInfo">
          <!--<button wx:if="{{!hasUserInfo && canIUse}}" class="getusernicknameButton" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
          <block wx:else>*/-->
          <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
          <!--</block>-->
        </view>
      </li>
      <li class="search-container">
        <!--searchBox+searchButton-->
        <input type="search" placeholder="Search..."></input>
        <button >
          <icon type="search"></icon>
        </button>
      </li>

      <!-- <li>
        <button class="cat-button" size="mini">
          <image class="cat-image" src="../../images/cat.jpg" mode="widthFix"></image>
        </button>
      </li> -->
      <li>
        <button class="plus-button" size="mini">
          <image class="plus-image" src="../../images/plus.png" mode="widthFix"></image>
        </button>
      </li>
    </ul>

  </header-bar>

  <view class="header">
    <view class="header-container">
      <view class="h1">Discuss, Relate & Share</view>
      <view class="h2">Discussion threads on topics of your choice!</view>
    </view>
    <!--<filter button> -->
    <view class="button-container">
      <button class="button-container-text" size="mini">Filter by ⬇</button>
    </view>
    <!--</filter button> -->
    <view class="clr"></view>
  </view>

  <!-- <scroll-view scroll-y> -->
  <block wx:for="{{posts}}" wx:for-item="post" wx:key="id" class="posts-scroll">
    <view class="outer-post-container">
      <post-block post="{{post}}"></post-block>
    </view>
  </block>
  <!-- </scroll-view> -->

</view>
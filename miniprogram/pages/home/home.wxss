/* miniprogram/pages/home/home.wxss */

ul {
  display: flex;
  list-style: none;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  background: white;
}

.userinfo-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background-color: #000;
  float: left;
  margin-top: 5px;
  margin-bottom: 15px;
}

.search-container {
  margin-top: 5px;
  margin-bottom: 15px;
  flex: 0.5 1  60%;
  display: flex;
}

.search-container input {
  border-radius: 3px 0 0 3px;
  background-color: #c7d0d8;
  padding: 5px;
  width:100%;
}

.search-container button {
  width: 23px;
  background-color: #b7b7b8;
  border-radius: 0 3px 3px 0;
  padding: 0;
  min-height: 0;
  margin: 0;
  padding-top: 2px;
}

.plus-image {
  width: 1.6em;
}

.header {
  background: white;
}

.header-container {
  width: 80%;
  padding: 20px;
  margin: auto;
  margin-top: 40px;
}

.h1 {
  text-align: center;
  font: normal 40px Impact, Charcoal, sans-serif;
  color: #47625a;
}

.h2 {
  text-align: center;
  font-size: 10px;
  letter-spacing: 0.2em;
  color: #47625a;
}



.button-container-text {
  background: #47625a;
  font-size: 0.5em;
  float: right;
  margin-right: 10px;
  margin-bottom: 10px;
  color: #FFF;

}

.button-container-text:active {
  background: #fff;
  float: right;
  color: #47625a;
  border: thin, #47625a;
  margin-right: 10px;
  margin-bottom: 10px;
}

.outer-post-container {
  height: 7.5em;
  margin: 0.5em;
}

